{
  "name": "cognigy-actions",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "demo-app",
    "sdk-app",
    "cxone-chat",
    "backend"
  ],
  "scripts": {
    "dev": "yarn workspace demo-app dev",
    "dev:all": "concurrently \"yarn dev\" \"yarn backend\"",
    "backend": "node backend/server.js",
    "build:sdk": "yarn workspace @cxone/webchat-sdk build",
    "build:cxone-chat": "yarn workspace @cxone/chat build",
    "build:demo": "yarn workspace demo-app build",
    "build": "yarn build:cxone-chat && yarn build:sdk && yarn build:demo",
    "build:gh-pages": "yarn build:cxone-chat && yarn build:sdk && yarn workspace demo-app build:gh-pages",
    "preview": "yarn workspace demo-app preview",
    "deploy": "yarn build:gh-pages && gh-pages -d demo-app/dist",
    "start": "node server.production.js",
    "start:local": "yarn build && yarn start",
    "fly:deploy": "fly deploy",
    "fly:logs": "fly logs"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "gh-pages": "^6.1.1"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
